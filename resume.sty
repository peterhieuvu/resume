%------------------ COMMANDS ------------------
%data commands
\newcommand{\nameField}{ERR!DEFAULT NAME}
\newcommand{\setName}[1]{
    \renewcommand{\nameField}{
        \hspace{-12pt}
        \contourlength{0.4pt}
        \contournumber{20}
        \fontfamily{\titleFont}\fontsize{36}{38}\selectfont
        \contour{black}{#1}
        }
}
\newcommand{\titleField}{ERR!DEFAULT TITLE}
\newcommand{\setTitle}[1]{
    \renewcommand{\titleField}{
        \fontfamily{\titleFont}\Large\selectfont
        {\color{ColorTitle}#1}
        }
}
\newcommand{\addressFieldOne}{ERR!DEFAULT ADDRESS1}
\newcommand{\setAddressOne}[1]{
    \renewcommand{\addressFieldOne}{#1}
}
\newcommand{\addressFieldTwo}{ERR!DEFAULT ADDRESS2}
\newcommand{\setAddressTwo}[1]{
    \renewcommand{\addressFieldTwo}{#1}
}
\newcommand{\nationField}{ERR!DEFAULT NATION}
\newcommand{\setNation}[1]{
    \renewcommand{\nationField}{#1}
}
\newcommand{\phoneField}{ERR!DEFAULT PHONE}
\newcommand{\setPhone}[1]{
    \renewcommand{\phoneField}{#1}
}
\newcommand{\emailField}{ERR!DEFAULT EMAIL}
\newcommand{\setEmail}[1]{
    \renewcommand{\emailField}{#1}
}

%utility commands
\newcommand{\cbox}[1]{$\vcenter{\hbox{\textrm{#1}}}$} %center box
\newcommand{\setFont}[1]{\fontfamily{#1}\selectfont}

%private information, first argument is input file for private LaTeX (exclude -private.tex), 
%second argument is alternate information that is shown if private is unset
\newcommand{\private}[2]{\iftoggle{showPrivate}{\input{#1-private.tex}}{#2}}

\newcommand{\makeResumeHeader}{
    \begin{center}
    \begin{tabular*}{\textwidth}{l @{\extracolsep{\fill}} r}
        \multirow{3}{4in}{\nameField}   & \addressFieldOne  \\
                                        & \addressFieldTwo  \\
                                        & \nationField      \\
        \multirow{2}{4in}{\titleField}  & \phoneField       \\
                                        & \emailField
    \end{tabular*}
    \end{center}
}

\newcommand{\resumeSection}[1]{ 
    \vspace{\sectionSpacing}
    {\color{ColorSectionLine}\rule{\widthof{\large#1}}{2pt}}\\
    {\color{ColorSectionText}\large#1}\\
    {\color{ColorSectionLine}\xrfill{2mm}[ColorSectionLine]}\\\vspace{-5mm}
    }
\newcommand{\resumeEntry}[2]{
    \begin{parcolumns}[colwidths={1=\sectionIndentRatio\textwidth}, 
        nofirstindent, distance=1em, rulebetween]{2}
        \colchunk{\raggedleft#1}
        \colchunk{\raggedright#2}
    \end{parcolumns}
    \vspace{\lineSpacing}
}
